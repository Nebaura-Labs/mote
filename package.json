{
  "name": "mote",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@orpc/server": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "@orpc/tanstack-query": "^1.12.2",
      "better-auth": "^1.4.9",
      "@better-auth/expo": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "app:dev": "turbo -F native dev",
    "db:push": "turbo -F @mote/db db:push",
    "db:studio": "turbo -F @mote/db db:studio",
    "db:generate": "turbo -F @mote/db db:generate",
    "db:migrate": "turbo -F @mote/db db:migrate",
    "firmware:build": "cd firmware && pio run",
    "firmware:upload": "cd firmware && pio run -t upload",
    "firmware:monitor": "cd firmware && pio device monitor"
  },
  "dependencies": {
    "@mote/env": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "catalog:",
    "tailwind-merge": "^3.4.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@mote/config": "workspace:*",
    "@types/node": "^22.13.14",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.0.11"
  },
  "packageManager": "bun@1.3.3",
  "version": "1.0.0",
  "description": "**Mote - An open-source ESP32-S3 voice companion for Clawd**",
  "main": "roku-api.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nebaura-Labs/mote.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Nebaura-Labs/mote/issues"
  },
  "homepage": "https://github.com/Nebaura-Labs/mote#readme"
}
